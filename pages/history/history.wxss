.container {
  padding: 40rpx;
  background-color: #EEE;
}

.item {
  background-color: #FFF;
  border-radius: 20rpx;
  padding: 20rpx;
  width: 670rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.item-line {
  width: 670rpx;
  display: flex;
  flex-direction: row;
}

.item-text {
  width: 150rpx;
  height: 60prx;
  line-height: 60rpx;
  font-size: 18px;
  text-align: right;
  color: #888;
}

.item-content {
  width: 520rpx;
  height: 60prx;
  line-height: 60rpx;
  font-size: 18px;
}

.item-desc {
  width: 520rpx;
  line-height: 60rpx;
  font-size: 18px;
}

.item-state-granted {
  color: #09BB07;
}

.item-state-wait {
  color: #5CACEE;
}

.item-state-pending {
  color: #FF8C00;
}

.item-state-denied {
  color: #E64340;
}
