/* apply.wxss */

.pop-error {
  background: #de352d;
  color: #fff;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 16px;
  text-align: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  z-index: 3;
}

.container {
  padding-top: 60rpx;
  background: #efefef;
}

.line {
  margin-bottom: 30rpx;
  width: 750rpx;
}

.line-text {
  padding-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 18px;
  color: #888;
}

.line-not-null {
  margin-left: 10rpx;
  color: #e64340;
}

.line-input {
  background: #fff;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  line-height: 44px;
  height: 44px;
  padding-left: 20rpx;
  font-size: 18px;
}

.line-telephone-hint {
  color: #ccc;
  font-size: 16px;
}

.line-textarea {
  background: #fff;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  line-height: 44px;
  width: 710rpx;
  height: 90rpx;
  padding: 20rpx;
  font-size: 18px;
}

button {
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 710rpx;
}

